<footer>
    <section class="py-5">
            <div class="row g4">
                {{#each footerLink}}
                    <div class="col-2">
                        <div class="card h-100 border-light d-flex justify-content-between">
                            {{#each this}}
                                <a href="{{this.link}}" class="m-2 text-decoration-none
                                {{#if @last}}
                                    nav-link disabled                                 
                                {{/if}}
                                ">{{this.text}}</a>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
    </section>
</footer>