<header>
    <div>
        {{> title data=name big=true}}
    </div>
    <div class="my-2">
        <b>{{description}}</b>
    </div>
    
    <div>
        {{#with history}}
            <em>{{year}}, {{founder}}</em>
        {{/with}}
    </div>
    <hr />
</header>
<main>
    <section>
        {{> title data='Types:'}}
        
        <div class="my-3">
            {{#each types}}
                <button type="button" class="btn btn-outline-secondary">{{this}}</button>
            {{/each}}
        </div>
    </section>
    <hr/>
        <section>
        {{> title data='Syntax:'}}
        {{#with syntax}}           
        <ol class="list-group list-group-numbered list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">Variables</div>
                    {{#each variables}}
                        {{this}},
                    {{/each}}
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">Functions</div>
                    {{#each functions}}
                        {{this}},
                    {{/each}}
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">Conditionals</div>
                    {{#each conditionals}}
                        {{this}},
                    {{/each}}
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">Loops</div>
                    {{#each loops}}
                        {{this}},
                    {{/each}}
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">Classes</div>
                    {{#each classes}}
                        {{this}},
                    {{/each}}
                </div>
            </li>
        </ol>
        {{/with}}
    </section>
    <hr/>
    <section>
        {{> title data='Features:'}}
        
        {{#each features}}
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{this}}</li>
        </ul>
        {{/each}}
    </section>
    <hr />
    <section>
        {{> title data='Libraries:'}}
        <div class="my-3">
            {{#each libraries}}
                <button type="button" class="btn btn-outline-secondary">{{this}}</button>
            {{/each}}
        </div>
    </section>
    <hr />
    <section>
        {{> title data='Tools:'}}
        <div class="my-3">
            {{#each tools}}
                <button type="button" class="btn btn-outline-secondary">{{this}}</button>
            {{/each}}
        </div>
    </section>
    <hr/>
    <section>
        {{> title data='Community:'}}
        {{#each community}}           
        <ol class="list-group list-group-numbered list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">{{name}}</div>
                    {{type}}
                </div>
            </li>
        </ol>
        {{/each}}
    </section>
</main>