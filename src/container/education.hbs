{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
    {{#with main}}
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each educations}}
                    <li>
                    {{name}}, {{year}}
                    
                    {{#unless isEnd}}
                        <em>*в процессі вивчення</em>
                    {{/unless}}
                    </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My Certificates" big=false}}
            <ul>
                {{#each certificates}}
                    <li>
                    {{name}}, ID: ({{id}})
                    </li>
                {{/each}}
            </ul>
        </section>
    {{/with}}
</main>

