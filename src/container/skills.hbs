{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="All skills" big=true}}
                <ul>
                    {{#each skills}}
                        <li>
                            {{name}} 
                            {{#if point includeZero=true}}
                                ({{point}})
                            {{/if}}

                            {{#if isTop}}
                                <em>*top</em>
                            {{/if}}

                            {{#unless point includeZero=true}}
                                <em>*не вивчаємо</em>
                            {{/unless}}

                            {{#unless point}}
                                {{#if point includeZero=true}}
                                    <em>*в процессі вивчення</em>
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>
            </section>
            
            <section>
                {{> title data="My Hobbies" big=false}}
                <ol>
                {{#each hobbies}}
                    <li>
                        {{name}} 
                        {{#if isMain}}
                            <em>(favourite)</em>
                        {{/if}}
                    </li>
                {{/each}}
                </ol>
            </section>
        </main>
    {{/with}}
</div>

