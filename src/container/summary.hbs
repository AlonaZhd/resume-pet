{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}


<main>
    {{#with main}}
        <section>
            {{> title data=summary.title big=true}}
            {{#with summary}}            
                <div>
                    <p>{{text}}</p>
                </div>
            {{/with}}
        </section>
        <section>
            {{> title data=experience.title big=false}}
            {{#with experience}}
                <div>
                    <p>{{text}}</p>
                </div>
            {{/with}}
        </section>
    {{/with}}
</main>
    

