<main>
    <section class="py-5">
        {{#with newsBlock}}
            <h2 class="text-center mb-2">{{title}}</h2>
                <div class="row gy-4 gx-2">
                    {{#each cards}}
                        <div class="col-3">
                            <div class="card text-bg-dark mb-3 h-100">
                                <div class="card-header border-light">
                                    {{title}}

                                    {{#if idNew}}
                                        <span class="badge rounded-pill text-bg-success mx-2">New</span>
                                    {{/if}}
                                    
                                    {{#if isTop}}
                                        <span class="badge rounded-pill text-bg-danger mx-2">Top</span>
                                    {{/if}}
                                </div>
                                <div class="card-body h-100">
                                    <p class="card-text">{{description}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
        {{/with}}
    </section>
    <hr>    
    <section class="py-5">
        {{#with goodsBlock}}
            <ul class="nav nav-tabs mb-6">
                {{#each tabs}}
                    <li class="nav-item">
                        <a class="nav-link {{#if isActive}}fw-semibold active{{/if}} {{#if isDisabled}}disabled{{/if}}" href="#">{{text}}</a>
                    </li>
                {{/each}}
            </ul>

            {{> shopcard}}            
        {{/with}}
    </section>
    <hr>    
    <section class="py-5">
        {{#with subscribe}}
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body text-bg-dark d-flex justify-content-between">
                            <div>
                                <h2>{{header}}</h2>
                                <p>{{description}}</p>
                            </div>
                            <div class=" d-flex align-items-center">
                                {{#each buttons}}
                                    <span class="mx-1">{{> btn-prim}}</span>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    </section>
    <hr>    
    {{> shopaction}}
    <hr>    
</main>