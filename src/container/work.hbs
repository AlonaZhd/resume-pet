{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data='Work history' big=true}}                           
                    <div>
                        <ul>
                            {{#each works}}
                            <li>
                                <div>{{position}}</div>

                                <div>
                                    {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}}
                                    {{else}}
                                        (досі працюємо)
                                    {{/if}} 
                                    </div>
                                <div>
                                    {{#if company.url}} 
                                        {{> link text=company.name href=company.url blank=true noLine=true }}
                                    {{else}}
                                        <b>{{company.name}}</b>
                                    {{/if}}
                                </div>
                                <br>
                                <br>

                                <div><strong>Project ({{projectAmount}})</strong></div>

                                <ul>
                                    {{#each projects}}
                                    <br>
                                    <li>
                                        <div>
                                            {{> link text=name href=url blank=true noLine=true}}
                                            <br>
                                            <p><em>{{about}}</em></p>
                                            <br>
                                            <div>
                                                Project stacks ({{../stackAmount}})
                                                {{#each stacks}}
                                                <ul>
                                                    <li>{{name}}</li>
                                                </ul>
                                                {{/each}}
                                            </div>
                                            <br>
                                            <div>
                                                Project awards ({{../awardAmount}})
                                                {{#each awards}}
                                                <ul>
                                                    <li>{{name}}</li>
                                                </ul>
                                                {{/each}}
                                            </div>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                            {{/each}}
                        </ul>
                    </div>
            </section>
        </main>
    {{/with}}

</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}