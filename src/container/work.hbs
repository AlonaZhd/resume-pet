{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
    {{#with main}}
        <section>
            {{> title data='Work history' big=true}}                           
                <div>
                    <ul class="mt-3">
                        {{#each works}}
                        <li>
                            <div>{{position}}</div>
                            <div>
                                {{duration.from}} - 
                                {{#if duration.to}} 
                                    {{duration.to}}
                                {{else}}
                                    (досі працюємо)
                                {{/if}} 
                            </div>
                            <div>
                                {{#if company.url}} 
                                    {{> link text=company.name href=company.url blank=true noLine=true }}
                                {{else}}
                                    <b>{{company.name}}</b>
                                {{/if}}
                            </div>

                            <div class="my-4"><strong>Project ({{projectAmount}})</strong></div>

                            <ul>
                                {{#each projects}}
                                <li>
                                    <div>
                                        {{> link text=name href=url blank=true noLine=true}}
                                        <p><em>{{about}}</em></p>
                                        <div>
                                            Project stacks ({{../stackAmount}})
                                            {{#each stacks}}
                                            <ul>
                                                <li>{{name}}</li>
                                            </ul>
                                            {{/each}}
                                        </div>
                                        <div class="mt-4">
                                            Project awards ({{../awardAmount}})
                                            {{#each awards}}
                                            <ul>
                                                <li>{{name}}</li>
                                            </ul>
                                            {{/each}}
                                        </div>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}}
                    </ul>
                </div>
        </section>
    {{/with}}
</main>

