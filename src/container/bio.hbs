<main>
    <section>
        <div>
            <h1>{{name}}</h1>
        </div>
        <div>
            <em>{{occupation}}</em>
        </div>
        <div class="mt-2">
            <b>{{birthdate}}, <address>{{birthplace}}</address></b>
        </div>
        <div>
            <b>{{deathdate}}, <address>{{deathplace}}</address></b>
        </div>
            Known for: 
            <ul>
                {{#each known_for}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>
        <hr />
    </section>
    <section>
    {{> title data="Education" big=true}}
        <div>
            {{#each education}}
                {{degree}}, {{field}}
                <strong>
                    {{institution}}, {{year}}
                </strong>
            {{/each}}
        </div>
    </section>
    <hr />
    <section>
    {{> title data="Notable publications"}}
        <ol>
            {{#each notable_publications}}
                <li>
                    <strong>
                        {{title}}
                    </strong>
                    <div>
                        {{year}}, {{publisher}}
                    </div>
                    <br>
                </li>
            {{/each}}
        </ol>
    </section>
    <section>
    {{> title data="Awards"}}
        <ul>
            {{#each awards}}
                {{> listbig}}
            {{/each}}
        </ul>
    </section> 
    <hr />
    <section>
    {{> title data="Partners"}}
        <ol>
            {{#each partners}}
                <li>
                    <strong>
                        {{name}}
                    </strong>
                    <div>
                        {{years}}, {{relationship}}
                    </div>
                    <br>
                </li>
            {{/each}}
        </ol>
    </section>
    <hr />
    <section>
        {{> title data="Influences"}}
        <ul>
            {{#each influences}}
                {{>listarrow}}
            {{/each}}
        </ul>
    </section>
    <section>
        {{> title data="Influenced"}}
        <ul>
            {{#each influenced}}
                {{> listarrow}}
            {{/each}}
        </ul>
    </section>
    <section>
        {{> title data="Quotes"}}
        <ul>
            {{#each quotes}}
                <li>
                    <q>{{this}}</q>
                </li>
            {{/each}}
        </ul>
    </section>
    <hr>
    <section>
        {{> title data="Major discoveries"}}
        <ul>
            {{#each major_discoveries}}
                {{> listbig}}
            {{/each}}
        </ul>
    </section>
        <section>
        {{> title data="Contributions"}}
        <div>
            {{#with contributions}}
                <strong>
                    {{title}}
                </strong>
                <div>
                    <div class="mt-2">{{year}}</div>
                    <div>{{description}}</div>
                    <div class="mt-3">
                        <em>{{field}}</em>
                    </div>
                </div>
            {{/with}}
        </div>
    </section>   
</main>