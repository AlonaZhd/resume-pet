<main>
    <h1 class='py-4'>{{header}}</h1>
    <div class='row d-flex justify-content-between'>
        <div class='col-8'>
            {{#with contacts_data}}
                <h2>{{title}}</h2>
                <div class="mt-3">
                    {{#each buttons}}
                        <button type='button' class='btn py-2 px-3 me-2 {{#if isPrimary}}btn-warning text-light{{/if}} btn-outline-warning'>{{text}}</button>
                    {{/each}}
                </div>
                {{#with form}}
                    <section class="my-2">
                        <div class="row">
                            {{#with input}}
                                {{> contact-data}}
                            {{/with}}
                        </div>
                    </section>
                    <hr>
                    <section class="my-2">
                        {{#each switch}}
                            <div class="form-check form-switch my-3">
                                <input class="form-check-input" type="checkbox" {{#if isActive}}checked{{/if}}>
                                <label class="form-check-label">{{text}}</label>
                            </div>
                        {{/each}} 
                    </section>
                    <hr>
                {{/with}}
            {{/with}}
            <section class="my-2">
                {{#with delivery}}
                    <h2>{{title}}</h2>
                    <section class="mt-3">
                        <div class="card p-3">
                            <div class="row">
                                {{#each select}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        {{> formSelect}}       
                                    </div>
                                {{/each}}
                            </div> 
                        </div>
                    </section>
                    <section class="my-3">
                        {{#each delivery_type}}
                            <div class="form-check my-1">
                                <input class="form-check-input" type="radio" name="flexRadio">
                                <label class="form-check-label d-flex justify-content-between" for="flexRadio">
                                    <div>{{this.type}}</div>
                                    <em>{{this.value}}</em>
                                </label>
                            </div>
                        {{/each}}
                    </section>
                    <hr>
                    <section class="my-4">
                        <h2>Оплата</h2>
                        {{#each payment}}
                            <div class="form-check my-1">
                                <input class="form-check-input" type="radio" name="payRadio">
                                <label class="form-check-label" for="payRadio">
                                    {{this.type}}
                                </label>
                                {{#if description}}
                                    <div>
                                        <small class='form-text'>{{description}}</small>
                                    </div>
                                {{/if}}
                            </div>
                        {{/each}}
                    </section>
                    <hr>
                    <section class="my-4">
                        {{#with contact}}
                            <h2>{{title}}</h2>
                            <div class="my-2">
                                <div class="row">
                                    {{> contact-data}}
                                </div>
                            </div>                            
                        {{/with}}
                    </section>
                    <hr>
                    <div class="my-4">
                        {{#with coment}}
                            <label class='form-label'>{{label}}</label>
                            <input type='text' class='form-control' placeholder='{{placeholder}}'/>
                        {{/with}}
                    </div>
                    <hr>
                {{/with}}
            </section>  
            <section class="my-4">
                {{#with coupon}}
                    <h2>{{title}}</h2>
                    {{#with select}}
                        <div class="my-3">
                            {{#with availabel_coupon}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select form-select-lg">
                                    <option selected disabled>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>       
                            {{/with}}
                        </div>
                        <div class="my-3">
                            {{#with friend_coupon}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-sm">
                                        <option selected disabled>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                    <small class='form-text'>{{caption}}</small>      
                            {{/with}}
                        </div>
                    {{/with}}
                    {{#with add}}
                        <div class="my-3">
                            {{#with friend}}
                                <label class='form-label'>{{label}}</label>
                                <input type='text' class='form-control form-control-lg' placeholder='{{placeholder}}'/>
                                <small class='form-text'>{{caption}}</small>        
                            {{/with}}
                        </div>
                        <div class="my-3">
                            {{#with colleague}}
                                    <label class='form-label'>{{label}}</label>
                                    <input type='text' class='form-control form-control-sm' placeholder='{{placeholder}}'/>
                                    <small class='form-text'>{{caption}}</small>      
                            {{/with}}
                        </div>
                    {{/with}}
                {{/with}}
            </section>
            <hr>
            <section class="my-4">
                {{#with quiz}}
                    <h2>{{title}}</h2>
                    <div class="my-4">
                        {{#with preference}}
                            <div>{{title}}</div>
                            {{#each options}}
                                <div class="form-check my-1">
                                    <input class="form-check-input" type="radio" name="radio">
                                    <label class="form-check-label" for="radio">
                                        {{this}}
                                    </label>
                                </div>
                            {{/each}}
                        {{/with}}
                    </div>
                    <div class="my-4">
                        {{#with your_expirience}}
                            <label class='form-label'>{{label}}</label>
                            <input type='text' class='form-control'/>
                        {{/with}}
                    </div>
                    <div class="my-4">
                        {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            {{> formSelect}}     
                        {{/with}}
                    </div>
                    <div class="my-4">
                        {{#with factors}}
                            <div>{{title}}</div>
                            {{#each options}}
                                <div class="form-check my-1">
                                    <input class="form-check-input" type="checkbox" name="check">
                                    <label class="form-check-label">
                                        {{this}}
                                    </label>
                                </div>
                            {{/each}}
                        {{/with}}
                    </div>
                {{/with}}
            </section>
            
        </div>
        <div class='col-4 gy-2'>
            <div class='card p-2 mb-4'>
                {{#each action_block}}
                {{#if isPrimary}}
                    <div>
                        <button type='button' class='btn py-2 px-3 m-1 btn-success text-light mx-2'>{{text}}</button>
                    </div>
                {{/if}}

                {{#if isDanger}}
                    <div>
                        <button type='button' class='btn py-2 px-3 m-2 p-3 m-1 m-2 btn-danger mx-2'>{{text}}</button>
                    </div>
                {{/if}}

                {{#if isInfo}}
                    <div>
                    <button
                        type='button'
                        class='btn py-2 px-3 m-2 btn-info text-light mx-2'
                    >{{text}}</button>
                    </div>
                {{/if}}
                {{/each}}
            </div>
            <div class='card p-2'>
                {{#with total}}
                <ul class='list-group list-group-flush'>
                    <li class='list-group-item'>
                    <h2>{{title}}</h2>
                        {{#each item_list}}
                            <div>{{name}}: {{price}}</div>
                        {{/each}}
                    </li>
                    <li class='list-group-item'>
                        {{#each additional_info}}
                            <div>{{text}}: {{value}}</div>
                        {{/each}}
                    </li>
                    <li class='list-group-item'>
                        {{#each additional_info}}
                            <div>{{text}}: {{value}}</div>
                        {{/each}}
                    </li>
                    {{#each button}}
                        {{#if isPrimary}}
                            <div>
                            <button
                                type='button'
                                class='btn py-2 px-3 m-2 p-3 m-1 m-2 btn-primary mx-2'
                            >{{text}}</button>
                            </div>
                        {{/if}}
                        {{#if isOutline}}
                            <div>
                            <button
                                type='button'
                                class='btn py-2 px-3 m-2 p-3 m-1 m-2 btn-outline-primary mx-2'
                            >{{text}}</button>
                            </div>
                        {{/if}}
                    {{/each}}
                </ul>
                {{/with}}
            </div>
        </div>
    </div>
    <hr>
</main>